<div class="row shopping_cart_item">
  <div class="col-md-4"><%= shopping_cart_item.product.name %></div>
  <div class="col-md-4"><%= shopping_cart_item.product.price %></div>
  <div class="col-md-4">
    <%= link_to '<button class="btn btn-xs">+</button>'.html_safe, cart_item_amount_add_path(cart_item_id: shopping_cart_item.id) %>
    <%= shopping_cart_item.amount %>
    <%= link_to '<button class="btn btn-xs">-</button>'.html_safe, cart_item_amount_subtract_path(cart_item_id: shopping_cart_item.id) %>
    <%= link_to '<button class="btn btn-danger">delete</button>'.html_safe, cart_item_destroy_path(cart_item_id: shopping_cart_item.id), method: :delete,
                data: {confirm: 'Are you sure?'} %>
  </div>
</div>

