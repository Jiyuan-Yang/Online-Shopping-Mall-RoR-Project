<div class="row order_item">
  <div class="col-md-4"> <%= order_item.product.name %></div>
  <div class="col-md-4"> <%= order_item.amount %></div>
  <% if current_user.character == 'seller' %>
    <div class="col-md-2">
      <% if order_item.progress <= 2 %>
        <%= link_to '<button class="btn btn-success">update</button>'.html_safe, update_order_status_path(order_item.order.id, order_item_id: order_item.id) %>
      <% else %>
        <%= link_to '<button class="btn btn-success" disabled="disabled">update</button>'.html_safe, update_order_status_path(order_item.order.id, order_item_id: order_item.id) %>
      <% end %>
    </div>
    <div class="col-md-2">
      <%= link_to '<button class="btn btn-danger">delete</button>'.html_safe, order_item_destroy_path(order_item.order.id, order_item.id), method: :delete %>
    </div>
  <% else %>
    <div class="col-md-2">
      <% if order_item.progress == 3 %>
        <%= link_to '<button class="btn btn-success">update</button>'.html_safe, update_order_status_path(order_item.order.id, order_item_id: order_item.id) %>
      <% else %>
        <%= link_to '<button class="btn btn-success" disabled="disabled">update</button>'.html_safe, update_order_status_path(order_item.order.id, order_item_id: order_item.id) %>
      <% end %>
    </div>
    <div class="col-md-2">
      <%= link_to '<button class="btn btn-danger">delete</button>'.html_safe, order_item_destroy_path(order_item.order.id, order_item.id), method: :delete %>
    </div>
  <% end %>
</div>
<div class="row order_item_progress">
  <div class="col-md-11">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= order_item.progress * 25 %>%; min-width: 4em;">
        <%= order_item.progress * 25 %>%
      </div>
    </div>
  </div>
  <div class="col-md-1">
    <% if order_item.progress == 0 %>
      <div>等待发货</div>
    <% elsif order_item.progress == 1 %>
      <div>已发货</div>
    <% elsif order_item.progress == 2 %>
      <div>正在运输</div>
    <% elsif order_item.progress == 3 %>
      <div>等待收货</div>
    <% else %>
      <div>已收货</div>
    <% end %>
  </div>
</div>
