<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "the Max Jim's", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <% if get_user_character == 'administrator' %>
            <li><%= link_to "All Users", all_users_path %></li>
            <li><%= link_to "All Shops", all_shops_path %></li>
            <li><%= link_to "All Orders", all_orders_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if get_user_character == 'seller' %>
                <li><%= link_to "Shops", user_shop_path(current_user.id) %></li>
                <li><%= link_to "Orders of Shops", list_orders_path(current_user.id) %></li>
              <% elsif get_user_character == 'buyer' %>
                <li><%= link_to "Shopping Cart", user_shopping_cart_path(current_user.id) %></li>
                <li><%= link_to "Favorites", user_favorite_path(current_user.id) %></li>
                <li><%= link_to "Orders", list_orders_path(current_user.id) %></li>
              <% end %>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>