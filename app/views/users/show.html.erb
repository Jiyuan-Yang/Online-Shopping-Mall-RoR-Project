<% provide(:title, @user.name + '\'s profile') %>

<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>, <%= @user.email %>
        </h1>
        <%= link_to 'click here to see your orders', list_orders_path %>
      </section>
    </aside>
  </div>
</div>
