<% provide(:title, "Edit User") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', item:@user %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <% if @user.character == 'buyer' %>
      <%= f.label :receiver_name %>
      <%= f.text_field :receiver_name, class: 'form-control' %>

      <%= f.label :receiver_address %>
      <%= f.text_field :receiver_address, class: 'form-control' %>

      <%= f.label :receiver_phone_number %>
      <%= f.text_field :receiver_phone_number, class: 'form-control' %>
      <% end %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
