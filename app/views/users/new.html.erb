<% provide(:title, '注册') %>
<h1>注册</h1>
<div class="row forms">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: sign_up_path) do |f| %>
      <%= render 'shared/error_messages', item: @user %>

      <%= f.label :name, "用户名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "电子邮件" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :character, "用户类别"%>
      <%= f.text_field :character, class: 'form-control' %>
      <!--
      <%= select_tag(:city_id, options_for_select(
      [['buyer: could go shopping on this web mall', 'buyer'],
       ['seller: could open your own shops', 'seller'],
       ['administrator: have the right to manage every thing', 'administrator']], 1)) %>
      -->

      <%= f.label :password, "密码" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "创建账户", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>