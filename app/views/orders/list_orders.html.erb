<% provide(:title, @user.name + '\'s orders') %>

<div>
  <% if @user.orders.any? %>
    <div class="container-fluid">
      <div class="row table_head">
        <div class="col-md-2">
          order number
        </div>
        <div class="col-md-offset-8">
          operation
        </div>
      </div>
      <div>not finished</div>
      <%= render @orders_not_finished %>
      <div>finished</div>
      <%= render @orders_finished %>
    </div>
    <%= will_paginate %>
  <% end %>
</div>
