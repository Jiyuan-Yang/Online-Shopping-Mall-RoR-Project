<% provide(:title, '创建店铺') %>
<h1>创建店铺</h1>
<div class="row forms">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@shop, url: create_shop_post_path) do |f| %>
      <%= render 'shared/error_messages', item: @shop %>

      <%= f.label :name, "店铺名称" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description, "店铺描述" %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.submit "创建店铺", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>