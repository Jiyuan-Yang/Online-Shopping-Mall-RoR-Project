<% provide(:title, 'Create shop') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@shop, url: create_shop_post_path) do |f| %>
      <%= render 'shared/error_messages', item: @shop %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.submit "Create my shop", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>